<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hemant.firstpage.Main4Activity"
    android:background="@drawable/app"
    android:onClick="Q11">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvn"
            android:textSize="20dp"
            android:textColor="@color/abcd" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE:"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textColor="@color/abcd"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvr"
                android:textColor="@color/abcd"
                android:textSize="18dp"
                android:contextClickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="75dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUANTITY: "
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:textColor="@color/abcd" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btn1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/tvq"
                android:textAlignment="center"
                android:textColor="@color/abcd"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btn2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/linearLayout2"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL:"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/abcd"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_marginLeft="150dp" />

            <TextView
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvt"
                android:textSize="20dp"
                android:textColor="@color/abcd"
                android:paddingStart="30dp"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tvt"
                android:layout_alignTop="@+id/tvt" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD TO CART"
        android:id="@+id/button2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO TO CART"
        android:id="@+id/btnload"
        android:onClick="Qbtn101"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/scrollView11"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2"
            android:layout_above="@+id/button2"
            android:layout_below="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" DISH "
                    android:id="@+id/tv1"
                    android:textSize="22dp"
                    android:textColor="@color/abcd"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="130dp"
                    android:id="@+id/textView12"
                    android:textSize="12dp"
                    android:textColor="@color/abcd"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" RATE "
                    android:id="@+id/tv2"
                    android:textAlignment="center"
                    android:textColor="@color/abcd"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:id="@+id/textView14"
                    android:textAlignment="center"
                    android:textColor="@color/abcd"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" QUANTITY"
                    android:id="@+id/tv3"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textColor="@color/abcd" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:id="@+id/textView16"
                    android:textSize="12dp"
                    android:textColor="@color/abcd"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" VALUE "
                    android:id="@+id/tv4"
                    android:textAlignment="center"
                    android:textColor="@color/abcd"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="140dp"
                    android:id="@+id/textView18"
                    android:textColor="@color/abcd"
                    android:textAlignment="center"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLACE ORDER"
        android:id="@+id/button4"
        android:layout_below="@+id/btnload"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ORDER"
        android:id="@+id/textView13"
        android:textColor="@color/abcd"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />

</RelativeLayout>
